  "devDependencies": {
    "concurrently": "^4.0.1",
    "eslint-plugin-jest": "^22.1.2",
    "express": "^4.16.4",
    "nodemon": "^1.18.6",
    "pouchdb-adapter-memory": "^7.0.0"
  }
